<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rootViews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/sample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/network"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/swiperefreshlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/swiperefreshlayout"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/linearlayoutmanager"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gridlayoutmanager"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/staggeredGridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/staggeredgridlayoutmanager"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/collapsingtoolbarlayout"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/multiple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/multiadapter"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/databinding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/databinding"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/emptyview"
            android:textAllCaps="false" />

    </LinearLayout>
</ScrollView>
