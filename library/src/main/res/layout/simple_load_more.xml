<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/simple_load_more_padding">

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="@dimen/simple_load_more_progressbar"
        android:layout_height="@dimen/simple_load_more_progressbar"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/simple_load_more_progressbar_right"
        android:layout_marginRight="@dimen/simple_load_more_progressbar_right"
        android:layout_toStartOf="@+id/tv_tips"
        android:layout_toLeftOf="@+id/tv_tips" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:ignore="RelativeOverlap"
        tools:text="tips" />

</RelativeLayout>