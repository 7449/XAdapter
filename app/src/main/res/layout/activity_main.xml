<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NetWork"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LinearLayoutManager"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/GridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GridLayoutManager"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/StaggeredGridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="StaggeredGridLayoutManager"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CollapsingToolbarLayout"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EmptyView"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/multiple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MultiAdapter"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/databinding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DataBinding"
            android:textAllCaps="false" />

    </LinearLayout>
</ScrollView>
